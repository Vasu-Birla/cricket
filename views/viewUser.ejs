<%- include ("header.ejs") %>
<%- include ("navbar.ejs") %>

      <div class="main-content">
    <section class="section">
          <div class="row">
           <div class="fully-tables">
            <div class="cards-headers">
                  <h4> User View Management  <% for(var i = 0; i < users.length; i++) { %> <%- users[i].id %>  <% } %></h4>
                  <div class="card-header-form">
                  </div>
                </div>
       
          <div class="table-reponsive box">
                <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                  <div class="row">
                  <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                <thead>
                     <tr role="row">
                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Day: activate to sort column ascending" style="width: 30.0781px;">Id</th>
                      <th class="sorting_asc" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Date: activate to sort column descending" style="width: 30.156px;"></th>
                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Day: activate to sort column ascending" style="width: 80.0781px;">Created at </th>
                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Dc Id: activate to sort column ascending" style="width: 167.953px;">Email</th>
                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Gross: activate to sort column ascending" style="width: 100.922px;">Name </th>
                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Gross: activate to sort column ascending" style="width: 100.922px;">status</th>
                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" aria-label="Action: activate to sort column ascending" style="width: 110.156px;">Action </th>
                    </tr>
                </thead>
                   <div class="table-responsive">
                      </div>
                      <tbody>

                        <% for(var i = 0; i < users.length; i++) { %>
                      <tr>
                        <td><%- users[i].id %></td>

                        <td class="p-0 text-center">
                          <div class="custom-checkbox custom-control">
                            <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input" id="checkbox-1">
                            <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                          </div>
                        </td>


                        <td><%- users[i].date %></td>


                        <td class="text-truncate">
                          
                          <a href="/userprofile/<%- users[i].id %>">  <img class="team-member team-member-sm rounded-circle"  src="http://62.72.5.222:3005/uploads/<%- users[i].image %>" alt="user" data-toggle="tooltip" title="" data-original-title="View <%- users[i].firstname %>'s Profile"> </a>
                            <div class="progress-text"><%- users[i].email %></div>
         
                        
                        </td>


                        <td class="align-middle">
                          <div class="progress-text"><%- users[i].firstname %></div>
                          
                        </td>


                        <td>                      


                          <% if(users[i].status == 'active') { %>
                            <div class="badge badge-success"><%- users[i].status %></div>
                            <% } else { %>                     
                              <div class="badge badge-danger"><%- users[i].status %></div>
                         
                         <% } %>                      
                          
                          
                        </td>
                        <td>
                          <!-- <a href="#" class="btn btn-outline-primary"> Edit </a> -->
                          <% if(users[i].status == 'active') { %>
                            <button onclick="updateStatus('<%= users[i].id %>','<%= users[i].status %>')" class="badge badge-warning"> Make Inactive </button>
                            <% } else { %>                     
                               <button onclick="updateStatus('<%= users[i].id %>','<%= users[i].status %>')" class="badge badge-warning" > Make Active  </button>
                         
                         <% } %> 
                        
                        </td>

                        
                      </tr>
                      <% } %>

                      </tbody>
                    </table>
                </div>
              </div>
          </div>
         </div>
      </div>
  </section>

      </div>
      <footer class="main-footer">
        <div class="footer-left">
